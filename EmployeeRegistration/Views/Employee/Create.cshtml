@model EmployeeRegistration.ViewModels.EmployeeModel
@using EmployeeRegistration.ViewModels
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 card p-3">
            <form asp-controller="Employee" asp-action="Create" method="post" id="employeeForm">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputEmail4 star">Name</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputPassword4">Email</label>
                        <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Mobile number</label>
                    <input type="text" asp-for="MobileNo" class="form-control" placeholder="Mobile number">
                    <span asp-validation-for="MobileNo" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="inputAddress2">Gender</label>
                </div>
                <input type="radio" asp-for="Gender" value="@GenderType.Male" placeholder="Apartment, studio, or floor">
                <label>Male</label>
                <input type="radio" asp-for="Gender" value="@GenderType.Female" placeholder="Apartment, studio, or floor">
                <label>Female</label>
                <span asp-validation-for="Gender" class="text-danger"></span>


                <div class="form-group">
                    <label for="inputAddress2">Address</label>
                    <textarea type="text" asp-for="Address" class="form-control" placeholder="Apartment, studio, or floor"></textarea>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="submit" class="btn btn-danger" onclick="ResetForm()">Reset</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>
<script src="~/js/CustomJs/Employee.js"></script>